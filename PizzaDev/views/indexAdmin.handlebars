
<body>
    <div class="pagina container">
        <div class="cabecalho flex">
            <a href="/cadastrar-pizza" class="botao">
                Nova Pizza
            </a>
        </div>

        {{#if listaPizzas}}
        <div class="tabela-responsiva">
            <table>
                <thead>
                    <tr>
                        <th width="85">Foto</th>
                        <th>Pizza</th>
                        <th width="130">Brotinho</th>
                        <th width="130">MÃ©dia</th>
                        <th width="130">Grande</th>
                        <th width="195" colspan="2"></th>
                    </tr>
                </thead>
                {{#each listaPizzas}}
                <tbody>
                    <tr>
                        <td>
                            <img src= "/images/{{foto}}" alt="" />
                        </td>
                        <td>
                            <h3>{{nomePizza}}</h3>
                            <p>{{descricao}}</p>
                        </td>
                        <td>
                            R$ {{precoBrotinho}}
                        </td>
                        <td>
                            R$ {{precoMedia}}
                        </td>
                        <td>
                            R$ {{precoGrande}}
                        </td>
                        <td>
                            <a href="/editar-pizza/{{pizza_id}}" class="btn-editar">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                        </td>
                        <td>
                            <a href="/delete/{{pizza_id}}" class="btn-excluir">
                                <i class="fa-regular fa-trash-can"></i> Excluir
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{/if}}
    </div>
</body>
</html>