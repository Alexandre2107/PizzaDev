<body>
    <div class="pagina container">
        <div class="cabecalho flex">
            <a href="/admin/cadastrar-usuario" class="botao">
                Novo Usuário
            </a>
        </div>

        {{#if mensagemErro}}
            <div class="msg-erro">
            {{mensagemErro}}
        </div>
        {{/if}}

        <div class="tabela-responsiva">
            <table>
                <thead>
                    <tr>
                        <th width="430">Nome completo</th>
                        <th width="320">Usuário</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                {{#each listaUsuarios}}
                <tbody>
                    <tr>
                        <td>
                            {{this.dataValues.nomeCompleto}}
                        </td>
                        <td>
                            {{this.dataValues.usuario}}
                        </td>
                        <td>
                            <a href="/admin/editar-usuario/{{this.dataValues.id}}" class="btn-editar">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                        </td>
                        <td>
                            <a href="/admin/usuarios/delete/{{this.dataValues.id}}" class="btn-excluir">
                                <i class="fa-regular fa-trash-can"></i> Excluir
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>